{
  "name": "dicionario",
  "version": "1.4.0",
  "description": "Um dicionário simples em que você pode adicionar palavras e suas respectivas definições.",
  "main": "./dist/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArthurLobopro/dicionario.js"
  },
  "keywords": [],
  "author": "Arthur Lobo",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icon",
        "ignore": [
          "\\.git",
          "\\.scss",
          "/build"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "dicionario",
            "setupIcon": "./build/icon.ico",
            "setupExe": "${name}-${version}-setup.exe",
            "iconUrl": "https://raw.githubusercontent.com/ArthurLobopro/dicionario.js/main/build/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ArthurLobopro",
              "name": "dicionario.js"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@electron-forge/publisher-github": "^6.0.4",
    "electron": "^22.0.0",
    "sass-compiler": "^1.3.0-beta"
  },
  "dependencies": {
    "ajv": "^8.11.2",
    "ajv-formats": "^2.1.1",
    "electron-frame": "^1.1.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "typescript": "^4.9.4",
    "update-electron-app": "^2.0.1"
  }
}
